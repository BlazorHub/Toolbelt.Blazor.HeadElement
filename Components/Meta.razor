@namespace Toolbelt.Blazor.HeadElement
@inject Toolbelt.Blazor.HeadElement.HeadElementHelper HeadElementHelper

@code {
    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public string Property { get; set; }

    [Parameter]
    public string Content { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        await HeadElementHelper.SetMetaElementAsync(new MetaEntry
        {
            KeyType = Name != null ? MetaEntryKeyType.Name : MetaEntryKeyType.Property,
            Key = Name ?? Property,
            Content = Content
        });
    }
}